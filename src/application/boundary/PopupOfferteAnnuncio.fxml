<HBox fx:id="containerOffertaAnnuncio" prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #F2EFEA;" stylesheets="@../resources/application.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.boundary.PopupInfoOfferta">
   <children>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <AnchorPane fx:id="paneInfoOffertaRegalo" prefHeight="310.0" prefWidth="509.0" visible="false">
               <children>
                  <Label layoutX="165.0" layoutY="43.0" text="Messaggio motivazionale">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelMessaggioMotivazionale" layoutX="105.0" layoutY="81.0" prefHeight="89.0" prefWidth="299.0" wrapText="true" />
               </children>
            </AnchorPane>

            <AnchorPane fx:id="paneInfoOffertaVendita" prefHeight="310.0" prefWidth="509.0" visible="false">
               <children>
                  <Label layoutX="187.0" layoutY="45.0" text="Prezzo controfferta">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelControfferta" layoutX="105.0" layoutY="80.0" prefHeight="89.0" prefWidth="299.0" wrapText="true" />
               </children>
            </AnchorPane>

