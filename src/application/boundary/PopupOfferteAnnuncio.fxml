				        <GridPane fx:id="gridPaneScambio"
				                  hgap="10" vgap="10"
				                  alignment="CENTER"
				                  style="-fx-background-color: #F2EFEA;" />
				    </content>
				</ScrollPane>
                  <Label fx:id="labelOffertaScambio" layoutX="114.0" layoutY="80.0" text="L'utente non ha specificato oggetti alternativi" visible="false">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </children>
